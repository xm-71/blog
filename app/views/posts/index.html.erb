<div class="container">
  <hr />
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-6">
        <h2><%= post.title %></h2>
        <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
      <div>
        <%= raw(post.body).truncate(358) %>
      </div>
      <div class="text-left">
        <%= link_to "READ MORE", post_path(post), class: "btn btn-info btn-xs" %>
      </div>
      </div>
      <div class="col btn-group-vertical  text-right">
      <% if admin_signed_in? %>
        <%= link_to "Show", post_path(post), class: "btn btn-primary" %>
        <%= link_to "Edit", edit_post_path(post), class: "btn btn-default" %>
        <%= link_to "Delete", post_path(post), class: "btn btn-danger", data: {:confirm => "Are you sure?"}, method: :delete %>
      <% end %>
    </div>
    </div>
    <br>
    <hr />
    <% end %>
</div>
